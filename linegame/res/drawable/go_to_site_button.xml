<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/splash_scr_rect_stroke_color" />
                    <corners android:radius="30dp" />
                </shape>
            </item>

            <item android:bottom="0.5dp" android:left="1dp" android:right="1dp" android:top="5.5dp">
                <shape android:shape="rectangle" android:gravity="bottom">
                    <solid android:color="@color/splash_scr_rect_color" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/splash_scr_rect_stroke_color" />
                    <corners android:radius="30dp" />
                </shape>
            </item>

            <item android:bottom="4dp" android:left="1dp" android:right="1dp" android:top="1.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/splash_scr_rect_color" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>